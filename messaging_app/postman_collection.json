									"pm.test(\"Status code is 200\", function () {",
									"    pm.response.to.have.status(200);",
									"});",
									"",
									"pm.test(\"Message is marked as read\", function () {",
									"    var jsonData = pm.response.json();",
									"    pm.expect(jsonData.is_read).to.be.true;",
									"});"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
