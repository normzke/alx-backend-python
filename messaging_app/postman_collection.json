{
	"info": {
		"_postman_id": "your-collection-id",
		"name": "Messaging App API",
		"description": "Collection for testing the Messaging App API endpoints",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Authentication",
			"item": [
				{
					"name": "Get JWT Token",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"username\": \"your_username\",\n    \"password\": \"your_password\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/token/",
							"host": ["{{base_url}}"],
							"path": ["api", "token", ""]
						}
					}
				},
				{
					"name": "Refresh JWT Token",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"refresh\": \"your_refresh_token\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/token/refresh/",
							"host": ["{{base_url}}"],
							"path": ["api", "token", "refresh", ""]
						}
					}
				}
			]
		},
		{
			"name": "Conversations",
			"item": [
				{
					"name": "List Conversations",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{access_token}}"
							}
						],
						"url": {
							"raw": "{{base_url}}/api/conversations/",
							"host": ["{{base_url}}"],
							"path": ["api", "conversations", ""]
						}
					}
				},
				{
					"name": "Create Conversation",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{access_token}}"
							},
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"name\": \"New Conversation\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/conversations/",
							"host": ["{{base_url}}"],
							"path": ["api", "conversations", ""]
						}
					}
				},
				{
					"name": "Add Participant",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{access_token}}"
							},
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"user_id\": 2\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/conversations/1/add_participant/",
							"host": ["{{base_url}}"],
							"path": ["api", "conversations", "1", "add_participant", ""]
						}
					}
				}
			]
		},
		{
			"name": "Messages",
			"item": [
				{
					"name": "List Messages",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{access_token}}"
							}
						],
						"url": {
							"raw": "{{base_url}}/api/conversations/1/messages/",
							"host": ["{{base_url}}"],
							"path": ["api", "conversations", "1", "messages", ""]
						}
					}
				},
				{
					"name": "Create Message",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{access_token}}"
							},
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"content\": \"Hello, this is a test message\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/conversations/1/messages/",
							"host": ["{{base_url}}"],
							"path": ["api", "conversations", "1", "messages", ""]
						}
					}
				},
				{
					"name": "Mark Message as Read",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{access_token}}"
							}
						],
						"url": {
							"raw": "{{base_url}}/api/conversations/1/messages/1/mark_as_read/",
							"host": ["{{base_url}}"],
							"path": ["api", "conversations", "1", "messages", "1", "mark_as_read", ""]
						}
					}
				}
			]
		}
	],
	"variable": [
		{
			"key": "base_url",
			"value": "http://localhost:8000"
		},
		{
			"key": "access_token",
			"value": "your_access_token_here"
		}
	]
} 